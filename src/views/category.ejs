<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head')  %> 
<body>
    <%- include('./partials/header')  %> 
    <h2>Categoria: <%- filtrado.subgategory %>  </h2>
    <div class="categories-product">
        <% filtrado.forEach(product => { %>
         <div class="products">
            <p>Nombre: <%- product.name%> </p>
            <img class="product-image" src="/images/products/<%- product.subcategory%>/<%- product.image%>" alt="<%- product.id%> ">
            <p>Descripcion: <%- product.description%> </p>
            <p>Talle: <%- product.size%> </p>
            <p>Color: <%- product.color%> </p>
            <p>Precio: <%- product.price%> </p>
            <form action="/products/category/<%- product.category %> " method="get">
                <button type="submit">Agregar al carrito <i class="fas fa-shopping-cart"></i></button>
            </form>
        </div>
        <% }) %>
    </div>
    <%- include('./partials/footer')  %> 
    <%- include('./partials/scripts')  %> 
</body>
</html>