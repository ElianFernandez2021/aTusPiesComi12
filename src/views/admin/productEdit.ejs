    <!-- Editor creador de productos -->
    <table>
        <tr>
            <td>
                <form action="/admin/products/<%= edit.id%>?_method=PUT" method="POST" autocomplete="off" >
                
                    <div>
                        <label for="product">Nombre</label>
                        <input type="text" name="name" id="product" value="<%= edit.name  %> ">
                    </div>
                    <div>
                        <label for="size">Talle</label>
                        <input type="text" name="size" id="size" value="<%= edit.size  %> ">
                    </div>
                    <div>
                        <label for="perPrice">Precio</label>
                        <input type="text" name="price" id="perPrice" value="<%= edit.price  %> ">
                    </div>
                    <div>
                        <label for="description">Descripcion</label>
                        <input type="text" name="description" id="description" value="<%= edit.description  %> ">
                    </div>
                    <div>
                        <label for="discount">Color</label>
                        <input type="text" name="discount" id="discount" value="<%= edit.color  %> ">
                    </div>
                    <div>
                        <label for="image">Imagen</label>
                        <input type="file" name="image" id="image" multiple value="<%= edit.image  %> ">
                    </div>

                    <div class="form_action--button">
                        <input type="submit" value="Editar">
                        <input type="reset" value="Reiniciar">
                    </div>
                </form>
                <form action="/admin/products/category/<%- edit.id%>?_method=delete" method="post">
                    <button type="submit">Eliminar <i class="far fa-trash-alt"></i></button>
                </form>

                <td>
                    <table class="list" id="storeList">
                        <thead>
                            <tr class="image-rightSide">
                               <img src="/images/products/<%- edit.subcategory %>/<%-edit.image%>  " alt="">
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </td>
            </td>
        </tr>
    </table>
