<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/adminHead')  %> 
<body>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%- include('../partials/adminHeader')%> 
    <table>
        <tr>
            <td>
                <form action="/admin/products" autocomplete="off" method="POST" enctype="multipart/form-data">
                    
                    <div>
                        <label for="product">Nombre</label>
                        <input type="text" name="name" id="product">
                    </div>
                    <div>
                        <label for="size">Talle</label>
                        <select name="size" id="">
                            <% sizes.forEach(talles => { %>
                                <option value="<%-talles.id%> "><%- talles.num %> </option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="category">Categoria</label>
                        <select name="category" id="" >
                            <% categories.forEach(category => { %>
                                <option value="<%- category.id %>" <%= locals.old && old.category == category.id ? "selected" : "" %> ><%- category.name %> </option>
                            <% }) %>
                            </select>
                            <% if (locals.errors && errors.category) { %>
                                <small class="text-danger"><%= errors.category.msg %> </small>
                            <% } %>
        
                        </select>

                    </div>
                    <div>
                        <label for="perPrice">Precio</label>
                        <input type="number" name="price" id="perPrice">
                    </div>
                    <div>
                        <label for="trade_mark">Marca</label>
                        <select name="trade_mark" id="">
                            <% marks.forEach(marca => { %>
                                <option value="<%- marca.id %> "><%- marca.mark%> </option>                             
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="description">Descripcion</label>
                        <input type="text" name="description" id="description">
                    </div>
                    <div>
                        <label for="discount">Color</label>
                        <select name="color" id="">
                            <% colors.forEach(color => { %>
                             <option value="<%- color.id%> "><%- color.name %> </option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="image">Imagen</label>
                        <input type="file" name="image" id="image" multiple>
                    </div>

                    <div class="form_action--button">
                        <input type="submit" value="Enviar">
                        <input type="reset" value="Reiniciar">
                    </div>
                </form>

                <td>
                    <table class="list" id="storeList">
                        <thead>
                            <tr>
                                <th>CÃ³digo</th>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </td>
            </td>
        </tr>
    </table>
    <script type="text/javascript" src="/javascript/productCreate.js"></script>


