<!DOCTYPE html>
<html lang="es">
    <%- include ('./partials/head.ejs')%>
<body class="formRegister" >
    <%- include ('./partials/header.ejs')%>
    <div class="cuadro-form tamaño-logo">
        <img src="/images/login/logo.png" alt="logo" >
        <form class="cuadro-form tamaño-logo" action="/user/register" method="POST" enctype="multipart/form-data" class="form-ad" >
            <div class="form-ad-input">
                <input class="forma-tamaño" type="text" name="name" placeholder="Nombre" value="<%= locals.old && old.name %>">
                <% if (locals.errors && errors.name) { %>
                    <small class="text-danger"><%= errors.name.msg %> </small>
                <% } %>
            </div>
            <div class="form-ad-input">
                <input class="forma-tamaño" type="text" name="last_name" placeholder="Apellido" value="<%= locals.old && old.last_name %>">
                <% if (locals.errors && errors.last_name) { %>
                    <small class="text-danger"><%= errors.last_name.msg %> </small>
                <% } %>
            </div>
            <div class="form-ad-input">
                <input class="forma-tamaño" type="email" name="email" placeholder="Ingresá tu email" value="<%= locals.old && old.email  %>">
                <% if (locals.errors && errors.email) { %>
                    <small class="text-danger"><%= errors.email.msg %> </small>
                <% } %>
            </div>
            <div class="form-ad-input">
                <input class="forma-tamaño" type="password" name="pass1" placeholder="Contraseña">
                <% if (locals.errors && errors.pass1) { %>
                    <small class="text-danger"><%= errors.pass1.msg %> </small>
                <% } %>
            </div>
            <div class="form-ad-input">
                <input class="forma-tamaño" type="password" name="pass2" placeholder="Repetir contraseña">
                <% if (locals.errors && errors.pass2) { %>
                    <small class="text-danger"><%= errors.pass2.msg %> </small>
                <% } %>
            </div>
            <div class="input-file">
                <p>Agregar foto</p>
                <input type="file" name="avatar">
                <% if (locals.errors && errors.image) { %>
                    <small class="text-danger"><%= errors.image.msg %> </small>
                <% } %>
            </div>
            <div class="form-ad-input_check">
                <input type="checkbox" name="terms" id="check">
                <label for="check">Acepto los términos y condiciones</label>
                <% if (locals.errors && errors.terms) { %>
                    <small class="text-danger"><%= errors.terms.msg %> </small>
                <% } %>
            </div>
            <button type="submit" class="btn btn-ad-primary">
                REGISTRATE
            </button>
            <a href="/user/login" class="userLink">Ya tengo cuenta</a>
        </form>
        <div ><a href="">¿Olvidaste tu contraseña?</a> </div>
    </div>
    <div class="cuadro-form orientar-p">
        <p>¿Tienes cuenta?</p>
        <a href="login">Inicia sesion</a> 
    </div>
    <%- include ('./partials/footer.ejs')%>
    <%- include ('./partials/scripts.ejs')%>
</body>
</html>