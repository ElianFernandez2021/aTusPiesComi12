<!DOCTYPE html>
<html lang="es">
    <%- include ('./partials/head.ejs')%>
<body >
    <%- include ('./partials/header.ejs')%>
    <div class="cuadro-form tamaño-logo">
        <img src="/images/login/logo.png" alt="logo" >
        <form action="/user/register" method="post">
            <h3>Registrate</h3>
            <div>
                <label for="usu">Email:</label>
            </div>      
            <div >
                <input type="email" id="usu" name="email" class="forma-tamaño" placeholder="Ingrese aquí su email" required>
                <% if (locals.errors && errors.email) { %>
                <small class="text-danger">*<%= errors.email.msg %> *</small>
                    <% } %>
            </div>
            <div>
                <label for="clave">Contraseña:</label>
            </div>    
            <div>
                <input type="password" id="clave" name="password" class="forma-tamaño" placeholder="Ingrese aquí su contraseña" required>
                <% if (locals.errors && errors.password) { %>
                    <small class="text-danger">*<%= errors.password.msg %> *</small>
                        <% } %>
            </div>
            <div>
                <label for="clave">Vuelve a escribir la contraseña:</label>
            </div>    
            <div>
                <input type="password" id="clave" name="password1" class="forma-tamaño" placeholder="Ingrese aquí su contraseña">
                <% if (locals.errors && errors.password1) { %>
                    <small class="text-danger">*<%= errors.password1.msg %> *</small>
                        <% } %>
            </div>
            <div id="boton-logueo">
                <button type="submit" value="Registrate"> Registrate</button>
            </div>
            <div class="borde">
            </div>
            <div class="centrar-o">
            <p>o</p>
            </div>
            <section class="orientar-boton">
               <div><button class="button-google forma-tamaño" >GOOGLE</button></div>
                <div><button class="button-face forma-tamaño">FACEBOOK</button></div> 
            </section>
            
        </form>
        <div ><a href="">¿Olvidaste tu contraseña?</a> </div>
    </div>
    <div class="cuadro-form orientar-p">
        <p>¿Tienes cuenta?</p>
        <a href="login">Inicia sesion</a> 
    </div>
    <%- include ('./partials/footer.ejs')%>
    <%- include ('./partials/scripts.ejs')%>
</body>
</html>